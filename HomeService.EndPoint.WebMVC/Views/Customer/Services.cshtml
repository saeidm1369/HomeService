<!-- Views/Customer/Services.cshtml -->
@using HomeService.Domain.Core.ServiceAgg.DTOs

@model IEnumerable<ServiceDTO>

@{
    ViewData["Title"] = "لیست خدمات";
    Layout = "~/Views/Customer/_CustomerLayout.cshtml";
}

<div class="container mt-4">
    <h2>لیست خدمات</h2>
    <div class="row mt-3">
        @foreach (var service in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@service.Name</h5>
                        <p class="card-text">@service.Description</p>
                        <a href="@Url.Action("RequestService", "Customer", new { serviceId = service.Id })" class="btn btn-primary">درخواست خدمت</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
