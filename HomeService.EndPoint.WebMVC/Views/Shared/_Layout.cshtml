<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>همیار منزل</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        header {
            background-image: linear-gradient(to right, #6a11cb, #2575fc);
        }

        nav .navbar-brand {
            font-weight: bold;
        }

        footer {
            background-color: #343a40;
            color: #ffffff;
        }

        .carousel-item img {
            height: 500px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <header class="text-white p-3">
        <div class="container">
            <h1 class="text-center">همیار منزل</h1>
        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">همیار منزل</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">خانه</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Service">خدمات</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">تماس با ما</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">درباره ما</a>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Profile">پروفایل</a>
                        </li>
                        <li class="nav-item">
                            <form id="logoutForm" class="form-inline" asp-controller="Auth" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-link nav-link">خروج</button>
                            </form>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Login">ورود</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Register">ثبت نام</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center p-3 mt-4">
        <p>&copy; 2023 همیار منزل</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
