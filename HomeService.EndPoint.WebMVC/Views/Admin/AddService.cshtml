@model HomeService.Domain.Core.ServiceAgg.DTOs.ServiceDTO

@{
    ViewData["Title"] = "اضافه کردن خدمت جدید";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>اضافه کردن خدمت جدید</h1>

<form asp-action="AddService">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceCategory.Id" class="control-label">دسته‌بندی</label>
        <select asp-for="ServiceCategory.Id" class="form-control" asp-items="ViewBag.Categories"></select>
        <span asp-validation-for="ServiceCategory.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="ذخیره" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
