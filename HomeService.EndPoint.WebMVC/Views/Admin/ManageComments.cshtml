@{
    ViewData["Title"] = "مدیریت کامنت‌ها و امتیازات";
}

<h2>مدیریت کامنت‌ها و امتیازات</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>کاربر</th>
            <th>کارشناس</th>
            <th>رتبه</th>
            <th>نظر</th>
            <th>تاریخ</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model.Reviews)
        {
            <tr>
                <td>@review.User.FullName</td>
                <td>@review.Expert.FullName</td>
                <td>@review.Rating</td>
                <td>@review.Comment</td>
                <td>@review.ReviewDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-danger" asp-action="DeleteComment" asp-route-id="@review.Id">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>