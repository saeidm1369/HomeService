@model IEnumerable<HomeService.Domain.Core.ServiceAgg.DTOs.ServiceCategoryDTO>

<h2>Manage Categories</h2>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <form asp-action="DeleteCategory" method="post">
                        <input type="hidden" name="id" value="@category.Id" />
                        <button type="submit">Delete</button>
                    </form>
                    <button onclick="location.href='@Url.Action("UpdateCategory", new { id = category.Id })'">Update</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Add New Category</h3>
<form asp-action="AddCategory" method="post">
    <div>
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" />
    </div>
    <button type="submit">Add</button>
</form>
